{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "target": "ES5",
    "sourceMap": false, // parcel的sourcemap功能还不完善，暂时不生成
    "pretty": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "locale": "zh-CN",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext"]
  },
  "include": ["src/**/*"],
  "exlucde": ["node_modules/**/*"]
}
